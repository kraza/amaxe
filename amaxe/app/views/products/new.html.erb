<div id="seasonal">
        <div class="inner">
<h1>New product</h1>

<% form_for(@product,:url => products_path,:html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :cat_id %><br />
   <%= @category = Category.find(:all,:conditions => "action = 'A'", :order => 'title').map {|u| [u.title, u.id] }
     f.select(:cat_id, @category) %>
  </p>
  <p>
    <%= f.label :action %><br />
    <%= f.select :action, Category:: ACTION, :prompt => "Select status for product" %>
  </p>
  <p>
    <label for="product">Upload A Product image:</label>
    <%= f.file_field :uploaded_data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>
</div>
</div>
