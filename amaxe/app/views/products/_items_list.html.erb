<% if @total == 0 %>

<p>No items found...</p>

<% else %>

<p>Number of Products found : <b><%= @total %></b></p>

<%= will_paginate @products %>
    <HR>

<table>
  <thead>
 <tr>
    <th width="20%" <%= sort_td_class_helper "title" %>><%= sort_link_helper "Title", "title" %></th>
    <th  width="25%" <%= sort_td_class_helper "cat_t" %>><%= sort_link_helper "Catageory", "cat_t" %></th>
    <th  width="25%" <%= sort_td_class_helper "action" %>><%= sort_link_helper "Status", "action" %></th>
    <th width="40%" >Image</th>
    <th colspan="3" align="center" <%= sort_td_class_helper "action" %>>Action</th>
  </tr>
</thead>
<tbody>
<% @products.each do |product| %>
   <tr class="<%= cycle("even","odd") %>">
    <td><%=h product.title %></td>
    <td><%=h product.cat_t %></td>
    <td><% if product.action == "A" %> Active <% else%>Inactive<% end %></td>
    <td><%=link_to(image_tag(product.public_filename,:width => '50',:height=> '50'),:action => 'view', :id => product.id,:popup => true)
%></td>
    
    
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
    
    
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
 <HR>
